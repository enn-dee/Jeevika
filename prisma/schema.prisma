generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String     @id @default(uuid())
  role        Role
  name        String
  email       String     @unique
  password    String
  location    String?
  skills      String[]
  proofOfWork String[]
  status      Status     @default(AVAILABLE)

  jobs        Job[]
  messages    Message[]
  chats       Chat[]     @relation("UserChats")
  createdAt   DateTime   @default(now())
}

model Job {
  id          String   @id @default(uuid())
  worker      User     @relation(fields: [workerId], references: [id])
  workerId    String
  title       String
  category    String
  description String?
  price       Float
  unit        Unit     @default(DAY)
  location    String
  createdAt   DateTime @default(now())
}

model Chat {
  id           String    @id @default(uuid())
  participants User[]    @relation("UserChats")
  messages     Message[]
  createdAt    DateTime  @default(now())
}

model Message {
  id        String   @id @default(uuid())
  chat      Chat     @relation(fields: [chatId], references: [id])
  chatId    String
  sender    User     @relation(fields: [senderId], references: [id])
  senderId  String
  text      String
  timestamp DateTime @default(now())
}

enum Role {
  WORKER
  BUYER
}

enum Status {
  AVAILABLE
  BUSY
  AWAY
}

enum Unit {
  DAY
  HOUR
  PIECE
}
